{
  "name": "sf_run_apex",
  "description": "Run an Apex script file against a target org",
  "input_schema": {
    "type": "object",
    "properties": {
      "file": { "type": "string", "description": "Path to Apex script (e.g., scripts/seed_examples.apex)" },
      "orgAlias": { "type": "string", "description": "Target org alias" }
    },
    "required": ["file", "orgAlias"],
    "additionalProperties": false
  }
}




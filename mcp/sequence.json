{
  "name": "applink-setup-sequence",
  "steps": [
    {
      "tool": "sf_deploy_source",
      "args": { "sourceDir": "force-app", "orgAlias": "${SALESFORCE_ORG_ALIAS}" }
    },
    {
      "tool": "heroku_publish_applink",
      "args": {
        "specPath": "apispec.yaml",
        "clientName": "HerokuAPI",
        "connectionName": "purple-zombie",
        "connectedAppName": "MyAppLinkApp",
        "permissionSetName": "ManageHerokuAppLink",
        "app": "${HEROKU_APP_NAME}"
      }
    },
    {
      "tool": "sf_run_apex",
      "args": { "file": "scripts/seed_examples.apex", "orgAlias": "${SALESFORCE_ORG_ALIAS}" }
    },
    {
      "tool": "check_openapi",
      "args": { "url": "${HEROKU_APP_URL}/openapi.yaml" }
    }
  ]
}



